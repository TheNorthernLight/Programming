import time

notebook_name = "notebook.txt"
print("No default notebook was found, created one.")

while True:
    print("Now using file", notebook_name)
    
    print("(1) Read the notebook \n(2) Add note \n(3) Empty the notebook \n(4) Change the notebook \n(5) Quit\n")
    
    choice = input("Please select one: ")
    
    if choice == "1":
        with open(notebook_name, "r") as file:
            print(file.read())
            
    elif choice == "2":
        note = input("Write a new note: ")
        timestamp = time.strftime("%X %x")
        with open(notebook_name, "a") as file:
            file.write(note + ":::" + timestamp + "\n")
        
    elif choice == "3":
        with open(notebook_name, "w") as file:
            file.write("")
            print("Notebook emptied.")
    
    elif choice == "4":
        notebook_name = input("Give the name of the new file: ")
        try:
            open(notebook_name)
        
        except FileNotFoundError:
            print("No notebook with that name detected, created one.")
            open(notebook_name, "a")
			
    elif choice == "5":
        print("Notebook shutting down, thank you.")
        break
    
    else:
        print("Incorrect selection.")
