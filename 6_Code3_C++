#include <iostream>
using namespace std;

int main()
{ 
	int i, grade=1, grade_count=0; 
 	float total_grade=0, total;
	
 	cout << "Program calculates the test grade average.\nFinish inputting with a negative number.\n";
  
	while(grade > 0) 
	 {
	  cout << "Input grade (4-10) ";
      cin >> grade;
		
      if((grade > 0) && (grade >= 4) && (grade <= 10)){
		  grade_count++;
		  total_grade = total_grade + grade;
	  }
	 } 
	
	total = total_grade / grade_count;
	cout << "You inputted " << grade_count << " grades.\n";
	cout << "Grade average: " << total << endl; 
	
}
	

