#include <iostream>
#include <fstream>

using namespace std;

int main() 
{
    fstream file;
    file.open("numbers.txt", ios_base::in);

    if (!file.is_open()) {
        cout << "Failed to open the file!" << endl;
        exit(-1);
    }

    float number, sum = 0;

    while (file >> number) {
        sum += number;
    }

    file.close();

    file.open("numbers.txt", ios_base::out | ios_base::app);

    if (file.is_open()) {
        file << "Sum is " << sum << endl;
		cout << "Sum is " << sum << endl;
        file.close();
    } else {
        cout << "Failed to open the file!" << endl;
        exit(-1);
    }
}
