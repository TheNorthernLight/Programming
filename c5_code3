#include <stdio.h>
int main() {
    int function, sum, num1, num2;

    printf("1: subtraction\n2: addition\n3: multiplication\n");

	printf("Select function:");
	function = getchar();
	
	printf("Enter the first number:");
    scanf("%d", &num1);
	
	printf("Enter the second number:");
    scanf("%d", &num2);
	
	
    switch (function) {
        case '1':
			sum = num1 - num2;
            printf("%d - %d = %d", num1, num2, sum);
            break;
        case '2':
    		sum = num1 + num2;
            printf("%d + %d = %d", num1, num2, sum);
            break;
		case '3':
			sum = num1 * num2;
            printf("%d * %d = %d", num1, num2, sum);
			break;
        default:
            printf("Invalid input\n");
            return 0;
    }

    
    return 0;
}
