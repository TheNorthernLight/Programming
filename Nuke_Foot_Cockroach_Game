import random 

round_count = 0
win = 0
tie = 0

while True: 
		
	choice_random_num = random.randint(1, 3)

	if choice_random_num == 1: 
	    choice_random_word = "Foot"
	elif choice_random_num == 2:
	    choice_random_word = "Nuke" 
	else:
	    choice_random_word = "Cockroach"
	   
	user_choice = input("Foot, Nuke or Cockroach? (Quit ends): ")
	
	if user_choice not in ["Foot", "Nuke", "Cockroach", "Quit", "quit"]:
	    print("Incorrect selection.")
	    
	elif user_choice in ["Quit", "quit"]:
		print("You played", round_count, "rounds, and won", win, "rounds, playing tie in", tie,"rounds.")
		break
		
	else:
	    print("You chose:", user_choice, "\nComputer chose:", choice_random_word)
	    
	    if user_choice == choice_random_word:
	        if user_choice == "Nuke":
	            print("Both LOSE!")
	        else:
	            print("It is a tie!")
	        tie += 1
	    
	    elif user_choice == "Foot":
	        if choice_random_word == "Nuke":
	            print("You LOSE!")
	        else: 
	            print("You WIN!")
	            win += 1
	    
	    elif user_choice == "Nuke":
	        if choice_random_word == "Cockroach":
	            print("You LOSE!")
	        else: 
	            print("You WIN!")
	            win += 1
	    
	    elif user_choice == "Cockroach":
	        if choice_random_word == "Foot":
	            print("You LOSE!")
	        else: 
	            print("You WIN!")
	            win += 1
				
	    round_count += 1

