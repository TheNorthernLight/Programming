#include <iostream>
using namespace std;

int main() {
    int choice, sum, num1, num2;
	cout << "Choose desired calculation:" << endl;
    cout << "1: subtraction\n2: addition\n3: multiplication\n4: division\n5: Remainder\n";
    cout << "Choose a calculation:";
    choice = getchar();
	
    cout << "Input first number:";
    cin >> num1;
	
    cout << "Input second number:";
    cin >> num2;
	
    switch (choice) {
        case '1':
            sum = num1 - num2;
            cout << num1 << "-" << num2 << " = " << sum << endl;
            break;
        case '2':
            sum = num1 + num2;
            cout << num1 << "+" << num2 << " = " << sum << endl;
            break;
        case '3':
            sum = num1 * num2;
            cout << num1 << "*" << num2 << " = " << sum << endl;
            break;
		case '4':
            sum = num1 / num2;
            cout << num1 << "/" << num2 << " = " << sum << endl;
            break;
		case '5':
            cout << num1 << endl;
            break;
        default:
            cout << "Invalid input\n";
    }
}
