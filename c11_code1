#include <stdio.h> 
int main()
{
	int i;
	
	struct personaldata {
		char first_name[20];
		char last_name[20];
		int phone_num[20];
	};
	
	struct personaldata person[50];
	
	
		printf("Enter first name:");
		scanf("%s", person[i].first_name);
	
		printf("Enter last name:");
		scanf("%s", person[i].last_name);
	
		printf("Enter telephone number:");
		scanf("%d", person[i].phone_num);
	
	
	FILE *fp1 = fopen("phonedir.txt", "a"); 

    if(fp1 == NULL){ 
		printf("An error occurred when opening the file!"); 
		return 1; 
    }  
    else {
			fprintf(fp1, "%s %s %d\n", person[i].first_name, person[i].last_name, person[i].phone_num); 
			fclose(fp1);
			printf("\nSuccessfully saved the data.");
    } 
 return 0;
}
