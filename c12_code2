#include<stdio.h>

void change_number(int *x);

int main()
{
   int x;
   printf("Enter the number x: ");
   scanf("%d", &x);
   print("In the main program: x = %d\n", x);
   change_number(x);
   printf("In the main program: x = %d\n", x);
   return 0;
}



void change_number(int *p_x)
{
    *p_x = *p_x + 3;
    printf("In the subroutine: x = %d\n", *p_x);
}
