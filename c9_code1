#include <stdio.h> 
int main()
{
	FILE *opening; 
    char *file_name = "hello.usr";
    char *opening_mode= "w"; 

    opening = fopen(file_name, opening_mode); 

    if(opening == NULL){ 
		printf("An error occurred when opening the file!"); 
		return 1; 
    }  
    else {
		fprintf(opening, "Hello world!\n"); 
		fclose(opening);
		printf("Writing to the file was successful.\nClosing the program.\n");
    } 
 return 0;
}

